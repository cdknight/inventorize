<div class="header">
  <%= link_to image_tag("logos/inventorize.png", style: "width: 200px;"), root_path, class: "header_logo_link" %>
  <ul class="header_list">
    <% if user_signed_in? %>
    <li class="header_item">
      <%= link_to "Schemas", schemas_path %>
    </li>
    <li class="header_item">
      <%= link_to "Categories", categories_path %>
    </li>
    <li class="header_item">
      <%= link_to "Log Out", destroy_user_session_path, method: :delete %>
    </li>
    <% else %>
    <li class="header_item">
      <%= link_to "Log In", new_user_session %>
    </li>
    <% end %>
  </ul>
</div>
